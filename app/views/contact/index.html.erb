<header class="header">
  <div class="header-innner">
    <div class="header-logo">
      <%= link_to "お問い合わせ" %>
    </div>

    <div class="header-contact">
      <nav>
        <ul>
          <li><%= link_to "トップ", root_path %></li>
          <li><%= link_to "施設について", guide_index_path %></li>
          <li><%= link_to "お問い合わせ", root_path %></li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<div class="contact-wrapper">
  
    <div class="contact-form">
      <div class="contact-login-form">
        <p>お問い合わせ<p>
         <%= form_tag('/thank', method: :get) do %> 

          <div class="contact-text-form">
            <label>お名前：<span>必須</span></label>
            <input class="contact-form-control" type="text" placeholder="例：山田　太郎" required autofocus>
          </div>
        
         <div class="contact-text-form">
            <label>メールアドレス：<span>必須</span></label>
            <input class="contact-form-control" type="email" placeholder="例：aaaa@mail.gmai.com" required>
          </div>

          <div class="contact-text-form">
            <label>ご質問内容：<span>必須</span></label>
            <textarea class="contact-form-text" type="textarea" placeholder="質問内容を入力してください" required autofocus></textarea>
          </div>

          <div class="contactbtn-form">
            <input class="contact-form-sub" type="submit">
          </div>
        <% end %>
      </div>



</div>
</div>
<div>
<%= render partial: "layouts/footer" %>
</div>